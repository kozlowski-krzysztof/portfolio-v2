---

<style>
    body,
    html {
        margin: 0;
        padding: 0;
        background-color: var(--bg2);

        width: 100dvw;
    }

    .height {
        height: 5000px;
    }

    .sticky {
        position: sticky;
        top: 0;
        overflow-x: hidden;
    }

    h1,
    article {
        margin: 0.5rem;
    }

    main {
        display: block;
        margin: 0 auto;
        max-width: 65ch;
        text-align: center;
    }

    button {
        border-style: none;
        border-radius: 1rem;
        padding: 1rem 2rem;
    }

    article {
        text-wrap: balance;
    }

    .button-container {
        margin: 3rem auto 5rem auto;
    }

    svg {
        max-width: 100%;
        mask-image: linear-gradient(to top, black 10%, transparent 100%);
    }

    ul {
        width: max-content;
    }

    .scroll-wrapper {
        /* transform: translateX(-300%); */
    }

    li {
        display: grid;
        background-color: var(--bg1);
        border-radius: 1rem;
        padding: 1rem 1.5rem;
        margin: 1rem;
        width: 20rem;
        height: 20rem;
        overflow: hidden;

        :last-child {
            z-index: 0;
            align-self: end;
        }

        > * {
            z-index: 1;
            grid-area: 1/1;
        }
    }
</style>

<script>
    import { initTheme } from "../components/ThemeSwitcher/ThemeUtil";
    import Lenis from "lenis";
    initTheme();

    // Initialize Lenis
    const lenis = new Lenis({
        // duration: 0.3, // scroll animation duration
        // easing: (t) => t, // linear, ease, etc.
        autoRaf: true,
    });

    // Listen for the scroll event and log the event data
    lenis.on("scroll", (e) => {});

    import { onScroll, createTimeline } from "animejs";
    createTimeline({
        defaults: {
            ease: "linear",
            duration: 500,
            composition: "blend",
        },
        autoplay: onScroll({
            target: ".height",
            enter: "top top",
            leave: "bottom bottom",
            sync: 0.5,
            debug: true,
        }),
    })
        .add(
            ".this",
            {
                translateX: ["0%", "-75%"],
            },
            0,
        )
        .init();
</script>

